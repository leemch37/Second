<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent">
  <LinearLayout
    android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="vertical"
      >
      <TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#ff0000ff"
			android:text="키패드 Visible 유무 제어 하기"
			android:textStyle="bold"
			android:textSize="16sp" 
			/>
	  <EditText
	        android:id="@+id/key_pad_control_edit"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="키패드보이기/숨기기 (코드구현)"
	  />
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:gravity="center">
        <Button
           android:id="@+id/key_pad_show"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="키패드보이기"
           >
        </Button>
         <Button
          android:id="@+id/key_pad_hide"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="키패드숨기기"
           >
        </Button>
     </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:orientation="vertical">
         <TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="#ff0000ff"
			android:text="키패드 ON시 액티비티 adjectResize"
			android:textStyle="bold"
			android:textSize="16sp" 
			/>
         <EditText
	        android:id="@+id/key_pad_control_edit"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:hint="키패드와 액티비티 화면 1"
			android:lines="3"
	    />
	   <EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:hint=" 키패드의 On에 따른 adjustPan 용1"
			android:lines="3"
	   />
	   <EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:hint="키패드의 On에 따른 adjustPan 용2"
			android:lines="3"
	    />
	    <EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:hint="키패드의 On에 따른 adjustPan 용3"
			android:lines="3"
	    />
	    <EditText
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:hint="키패드의 On에 따른 adjustPan 용4"
			android:lines="3"
	    />
       </LinearLayout>
  </LinearLayout>
  </ScrollView>